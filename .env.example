# Fastmail JMAP credentials
# Get your token from Settings -> Privacy & Security -> Integrations -> API tokens
FASTMAIL_TOKEN=your-fastmail-api-token

# Anthropic API key
# Get from console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key

# YNAB credentials
# Get token from Account Settings -> Developer Settings
YNAB_TOKEN=your-ynab-personal-access-token
YNAB_BUDGET_ID=your-ynab-budget-id

# YNAB Accounts (JSON array)
# Each account needs: name, ynab_id, and one must have "default": true
# Get account IDs from YNAB URL: app.ynab.com/.../accounts/ACCOUNT_ID_HERE
YNAB_ACCOUNTS='[
  {"name": "Example Card", "ynab_id": "abc-123-your-account-id", "default": true},
  {"name": "Another Card", "ynab_id": "def-456-your-account-id"},
  {"name": "Bank Checking", "ynab_id": "ghi-789-your-account-id"},
  {"name": "Bank Savings", "ynab_id": "jkl-123-your-account-id"}
]'

# Minimum AI score to import (1-10 scale, default: 6)
MIN_SCORE=6
