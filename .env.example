# Fastmail JMAP credentials
# Get your token from Settings -> Privacy & Security -> Integrations -> API tokens
FASTMAIL_TOKEN=your-fastmail-api-token

# Anthropic API key
# Get from console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key

# YNAB credentials
# Get token from Account Settings -> Developer Settings
YNAB_TOKEN=your-ynab-personal-access-token
YNAB_BUDGET_ID=your-ynab-budget-id
YNAB_ACCOUNT_ID=your-ynab-account-id
